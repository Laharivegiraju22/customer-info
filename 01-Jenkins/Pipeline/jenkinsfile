node {
 stage('Git-Checkout') {
  
   git 'https://github.com/Laharivegiraju22/customer-info.git'
  }
    
 def project_path="01-Jenkins/Code/petclinic"
 
 dir(project_path) {
    
  stage('Maven-Clean') {
  
   sh label: '', script: 'mvn clean'
  }
    
 stage('Maven-Compile') {

   sh label: '', script: 'mvn compile'
  }
  
   stage('Maven-Test') {
   
   sh label: '', script: 'mvn test'
  }
 
   stage('Maven-Package') {
  
   sh label: '', script: 'mvn package'
  }
  stage('Sonar Analysis'){

	withSonarQubeEnv('SonarQube'){
	sh 'mvn sonar:sonar'
	}
}

stage("Quality Gate"){
          timeout(time: 1, unit: 'MINUTES') {
              def qg = waitForQualityGate()
              if (qg.status != 'OK') {
                  error "Pipeline aborted due to quality gate failure: ${qg.status}"
              }
          }
      }        
      
stage('Jfrog Artifacory Upload') {

	def server= Artifactory.server 'Artifactory'
	def uploadSpec= """{
	"files": [{
	"pattern": "/root/.jenkins/workspace/customer-info/01-Jenkins/Code/petclinic/target/*.war",
		"target": "petclinic-accountinfo"}]x
	}"""
server.upload(uploadSpec)
}
stage('Docker-Stage-Deployment') {
   
   sh label: '', script: 'docker-compose up -d --build'
  }
}

}

